
@{
    ViewBag.Title = "CreateEvent";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;300;400;700;900&display=swap" rel="stylesheet">

<style>
    body {
        font-family: Poppins, sans-serif;
        color: #ED3A85;
        text-align: center;
    }
    .main {
        font-size: 40px;
        text-transform: uppercase;
        color: white;
        font-weight: 900;
        margin-bottom: 30px;
    }
    .container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        text-align: center;
        transform: scale(1.2);
    }

    .form-group {
        margin-bottom: 20px;
    }
    label {

        display: block;
        font-weight: bold;
        margin-bottom: 5px;
    }

    input[type="text"],
    input[type="date"],
    input[type="number"],
    textarea {
        width: 100;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        resize: vertical;
        background-color: lightgrey;
        color: black;
        font-weight: bold;
    }

    button {
        background-color: #4CAF50;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }
   button:hover {
      background-color: #45a049;
   }



</style>
<body>
    <div class="container">
        <hr /><hr /><hr /><hr /><hr /><hr /><hr /><hr /><hr /><hr />
        <div class="main">Create event</div>
        <form>
            <div class="form-group">
                <label for="eventName">Event Name:</label>
                <input type="text" class="evenField", name="eventName" required>
            </div>

            <div class="form-group">
                <label for="eventDate">Event Date:</label>
                <input style="color: black" type="date" class="evenField", name="eventDate" required>
            </div>

            <div class="form-group">
                <label for="eventField">Event Place:</label>
                <input type="text" class="evenField", name="eventPlace" required>
            </div>

            <div class="form-group">
                <label for="eventDescription">Event Description:</label>
                <textarea style="background-color:lightgray" class="evenField", name="eventDescription"></textarea>
            </div>

            <div class="form-group">
                <label for="ticketPriceNormal">Ticket Price (Normal):</label>
                <input type="number" class="evenField", name="ticketPriceNormal" required>
            </div>

            <div class="form-group">
                <label for="ticketPriceReduced">Ticket Price (Reduced):</label>
                <input type="number" class="evenField", name="ticketPriceReduced" required>
            </div>

            <div class="form-group">
                <label for="eventCategory">Event Category:</label>
                <input type="text" class="evenField", name="eventCategory" required>
            </div>

            <div class="form-group">
                <label for="availableSeats">Available Seats:</label>
                <input type="number" class="evenField", name="availableSeats" required>
            </div>
            <div class="form-group">
                <label for="eventStartTime">Event Start Time:</label>
                <input style="color: black" type="time" class="evenField", name="eventStartTime" required>
            </div>

            <div class="form-group">
                <label for="targetAudience">Target Audience:</label>
                <input type="text" class="evenField", name="targetAudience" required>
            </div>

            <button type="submit">Create Event</button>
            <br /><br /><br /><br /><br /><br /><br /><br /><br />
        </form>
    </div>
</body>


