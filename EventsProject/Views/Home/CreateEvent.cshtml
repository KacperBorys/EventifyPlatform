
@{
    ViewBag.Title = "CreateEvent";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;300;400;700;900&display=swap" rel="stylesheet">

<style>
    body {
        font-family: Poppins, sans-serif;
        color: #ED3A85;
        text-align: center;
    }
    form{
        margin: 20px auto;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        align-items: center;
        
    }
    .evenField {
        width: 500px;
    }
    input[type="text"],
    input[type="date"],
    input[type="number"],
    textarea {
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        resize: vertical;
        background-color: lightgrey;
        color: black;
        font-weight: bold;
    }
    label {
        display: inline;
        font-weight: bold;
        margin-bottom: 5px;
        text-align: left;
    }

   button {
        background-color: #4CAF50;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }
   button:hover {
      background-color: #45a049;
   }




</style>
<body>
    <main>
        <form>
            <div class="form-group">
                <label for="eventName">Event Name:</label>
                <input type="text" class="evenField" , name="eventName" required>
            </div>
            <div class="form-group">
                <label for="eventDate">Event Date:</label>
                <input style="color: black" type="date" class="evenField" , name="eventDate" required>
            </div>

            <div class="form-group">
                <label for="eventField">Event Place:</label>
                <input type="text" class="evenField" , name="eventPlace" required>
            </div>

            <div class="form-group">
                <label for="eventDescription">Event Description:</label>
                <textarea maxlength="100" style="background-color:lightgray" class="evenField" , name="eventDescription"></textarea>
            </div>

            <div class="form-group">
                <label for="ticketPriceNormal">Ticket Price (Normal):</label>
                <input type="number" class="evenField" name="ticketPriceNormal" min="0" required>
            </div>

            <div class="form-group">
                <label for="ticketPriceReduced">Ticket Price (Reduced):</label>
                <input type="number" class="evenField" name="ticketPriceReduced" min="0" required>
            </div>
            <div class="form-group">
                <label for="eventCategory">Event Category:</label>
                <select class="evenField" name="eventCategory" required style="color: black; background-color: lightgrey;">
                    <option value="Festival">Festival</option>
                    <option value="Concert">Concert</option>
                    <option value="Business_meeting">Business Meeting</option>
                    <option value="Other">Other</option>
                </select>
            </div>

            <div class="form-group">
                <label for="availableSeats">Available Seats:</label>
                <input type="number" class="evenField" name="availableSeats" min="0" required>
            </div>

            <div class="form-group">
                <label for="eventStartTime">Event Start Time:</label>
                <input style="color: black; background-color: lightgrey;" type="time" class="evenField" name="eventStartTime" required">
            </div>

            <div class="form-group">
                <label for="targetAudience">Target Audience:</label>
                <select class="evenField" name="targetAudience" required style="color: black; background-color: lightgrey;">
                    <option value="Youth">Youth</option>
                    <option value="Parents">Parents</option>
                    <option value="Families">Families</option>
                    <option value="Businessmen">Businessmen</option>
                    <option value="Other">Other</option>
                </select>
            </div>
            <button type="submit">Create Event</button>
        </form>
    </main>
</body>


