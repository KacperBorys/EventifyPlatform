@{
    ViewBag.Title = "Profile";
}

<style>
    body {
        color: white; /* Biała czcionka */
        font-family: Poppins, sans-serif;
    }

    #avatar {
        border-radius: 50%;
        overflow: hidden;
        width: 50vh;
        height: 50vh;
        object-fit: cover;
        position: relative;

    }
    #avatar-text {
        display: none;
        color: white;
        font-size: 20px;
        margin-top: 10px;
        text-align: center;
    }

    #left-side:hover #avatar-text {
        display: block;
    }
    #container {
        display: flex;
        margin-top: 50px;
    }

    #left-side {
        flex-basis: 50%;
        align-items: center;
        justify-content: center;
    }

    #right-side {
        flex-basis: 50%;
        padding-left: 20px; /* Dodatkowy odstęp między lewą a prawą stroną */
    }

    #right-side p {
        margin-top: 0; /* Usunięcie domyślnego marginesu dla akapitu */
    }

    .active {
        color: #5CE1E6; /* Kolor aktywnych biletów */
    }

    .expired {
        color: #ED3A85; /* Kolor przeterminowanych biletów */
    }

    .divider {
        height: 2px;
        background-color: #5CE1E6; /* Kolor turkusowej linii */
        margin: 10px 0; /* Odstęp nad i pod liniami */
        width: 80px;
    }

    .user-name {
        color: #ED3A85; /* Kolor imienia i nazwiska */
        font-size: 50px; /* Powiększona czcionka */
    }

    .tickets-section {
        background-color: #2c0052; /* Kolor ciemnoniebieskiego tła */
        padding: 10px;
        margin-top: 30px;
        border-radius:15px;
        width:80%;
        font-weight:bold;
    }

    .tickets-heading {
        color: #ED3A85; /* Kolor różowego napisu nad tickety */
        font-size: 50px;
        margin-bottom: 10px;
    }
    .ticket {
        margin-bottom: 15px; /* Odstęp między kolejnymi biletami */
        font-size: 16px;
    }



</style>

<body>
    <div id="container">
        <div id="left-side">
            <input type="file" id="fileInput" style="display: none;" accept="image/*">
            <img id="avatar" src="~/Image/avatar.png" alt="Zdjęcie" style="cursor: pointer;">
            <p id="avatar-text" style="position: absolute; top: 43%; left: 26%; transform: translate(-50%, -50%); color: white; font-size: 20px;">Change your avatar</p>
        </div>
        <div id="right-side">
            <p class="user-name">Name SURNAME</p>
            <div class="divider"></div>
            <div style="margin-top: 30px; font-size: 30px;">
                <p><span style="color: #ED3A85;font-weight:bold">Email:</span> example@example.com</p>
                <p><span style="color: #ED3A85;font-weight:bold">Phone number:</span> 123-456-789</p>
                <p><span style="color: #ED3A85;font-weight:bold">Given reviews:</span> 20</p>
            </div>

            <div class="tickets-section">
                <h3 class="tickets-heading">Your tickets</h3>
                <div style="margin-left:30px;">
                    <div class="ticket">
                        <p>Koncert Malika Montany 21.03.2023 <span class="active">[Active]</span></p>
                    </div>
                    <div class="ticket">
                        <p>Koncert Innej Osoby 15.01.2023 <span class="expired">[Expired]</span></p>
                    </div>
                    <div class="ticket">
                        <p>Koncert Kolejnej Osoby 10.05.2023 <span class="active">[Active]</span></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        document.getElementById("avatar").addEventListener("click", function () {
            document.getElementById("fileInput").click();
        });

        document.getElementById("fileInput").addEventListener("change", function (event) {
            var file = event.target.files[0];
            var reader = new FileReader();

            reader.onload = function (e) {
                document.getElementById("avatar").src = e.target.result;
            };

            reader.readAsDataURL(file);
        });
    </script>
</body>