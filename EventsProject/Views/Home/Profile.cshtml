@model EventsProject.Models.ApplicationUser

<style>
    body {
        color: white; 
        font-family: Poppins, sans-serif;
    }
    #avatar{
        position: relative;
    }
    #left-side {
      
        flex-basis: 50%;
        align-items: center;
        justify-content: center;
        display: flex; 
    }

    #AvatarImage {
        border-radius: 50%;
        overflow: hidden;
        width: 50vh;
        height: 50vh;
        object-fit: cover;
        cursor: pointer;
        position: relative;
    }

    #avatar-text {
        display: none;
        color: white;
        font-size: 20px;
        position: absolute;
        top: 90%;
        left: 90%;
        transform: translate(-50%, -50%);
    }

    #avatar:hover #avatar-text {
        display: block;
    }

    #container {
        display: flex;
        margin-top: 50px;
    }

    #right-side {
        flex-basis: 50%;
        padding-left: 20px; 
    }

        #right-side p {
            margin-top: 0; 
        }

    .active {
        color: #5CE1E6; 
    }

    .expired {
        color: #ED3A85;
    }

    .divider {
        height: 2px;
        background-color: #5CE1E6;
        margin: 10px 0; 
        width: 80px;
    }

    .user-name {
        color: #ED3A85; 
        font-size: 50px; 
    }

    .tickets-section {
        background-color: #2c0052; 
        padding: 10px;
        margin-top: 30px;
        border-radius: 15px;
        width: 80%;
        font-weight: bold;
    }

    .tickets-heading {
        color: #ED3A85; 
        font-size: 50px;
        margin-bottom: 10px;
    }

    .ticket {
        margin-bottom: 15px; 
        font-size: 16px;
    }
</style>

<body>
    <div id="container">
        <div id="left-side">
            <input type="file" id="fileInput" style="display: none;" accept="image/*">
            <div id="avatar">
                <img id="AvatarImage" src="~/Image/avatar.png" alt="Zdjęcie" style="cursor: pointer;">
                <p id="avatar-text" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); color: white; font-size: 20px;">Change your avatar</p>
            </div>
        </div>
        <div id="right-side">
            <p class="user-name">@User.Identity.Name PROFILE</p>
            <div class="divider"></div>
            <div style="margin-top: 30px; font-size: 30px;">
                <p><span style="color: #ED3A85;font-weight:bold">Email: </span>@Model.Email</p>
                <p><span style="color: #ED3A85;font-weight:bold">Phone number:</span> @Model.PhoneNumber</p>
                <p><span style="color: #ED3A85;font-weight:bold">Given reviews:</span> 20</p>
            </div>

            <div class="tickets-section">
                <h3 class="tickets-heading">Your tickets</h3>
                <div style="margin-left:30px;">
                    <div class="ticket">
                        <p>Koncert Malika Montany 21.03.2023 <span class="active">[Active]</span></p>
                    </div>
                    <div class="ticket">
                        <p>Koncert Innej Osoby 15.01.2023 <span class="expired">[Expired]</span></p>
                    </div>
                    <div class="ticket">
                        <p>Koncert Kolejnej Osoby 10.05.2023 <span class="active">[Active]</span></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        document.getElementById("avatar").addEventListener("click", function () {
            document.getElementById("fileInput").click();
        });

        document.getElementById("fileInput").addEventListener("change", function (event) {
            var file = event.target.files[0];
            var reader = new FileReader();

            reader.onload = function (e) {
                document.getElementById("AvatarImage").src = e.target.result;
            };

            reader.readAsDataURL(file);
        });
    </script>
</body>